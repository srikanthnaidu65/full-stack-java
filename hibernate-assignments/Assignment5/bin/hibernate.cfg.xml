<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
   <session-factory>
   
      <property name = "hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
      
      <property name = "hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
      
      <!-- myhb is the database name -->
      
      <property name = "hibernate.connection.url">jdbc:mysql://localhost:3306/fullstackjava</property>
      
      <property name = "hibernate.connection.username">root</property>
      
      <property name = "hibernate.connection.password">root</property>
      
      <property name = "hbm2ddl.auto">create</property>
      
      <property name = "show_sql">true</property>
      
      <!-- List of XML mapping files -->
      <mapping class = "com.srikanth.fullstackjava.Employee"/>
      <mapping class = "com.srikanth.fullstackjava.RegularEmployee"/>
      <mapping class = "com.srikanth.fullstackjava.ContractEmployee"/>
      
   </session-factory>
</hibernate-configuration>
